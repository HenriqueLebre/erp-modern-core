@page "/login"
@layout AuthLayout
@using ERP.Blazor.Models
@using ERP.Blazor.Services
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject ILogger<Login> Logger
@rendermode InteractiveServer

<PageTitle>SysFood Â· Login</PageTitle>

<div class="login-container">
    <div class="login-box">
        @* Header *@
        <div class="login-header">
            <h1>Welcome back</h1>
            <p>Sign in to continue to SysFood</p>
        </div>

        @* Form *@
        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin" FormName="loginForm">
            <DataAnnotationsValidator />

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-message">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    <span>@errorMessage</span>
                </div>
            }

            <div class="field">
                <label for="username">Username</label>
                <InputText id="username" 
                           @bind-Value="loginModel.Username" 
                           placeholder="Enter your username"
                           disabled="@isLoading"
                           autocomplete="username" />
                <ValidationMessage For="@(() => loginModel.Username)" />
            </div>

            <div class="field">
                <label for="password">Password</label>
                <InputText id="password" 
                           @bind-Value="loginModel.Password" 
                           type="password"
                           placeholder="Enter your password"
                           disabled="@isLoading"
                           autocomplete="current-password" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            <div class="field-row">
                <label class="checkbox">
                    <InputCheckbox @bind-Value="loginModel.RememberMe" disabled="@isLoading" />
                    <span>Remember me</span>
                </label>
            </div>

            <button type="submit" class="btn-primary" disabled="@isLoading">
                @if (isLoading)
                {
                    <svg class="spinner" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-dasharray="31.4 31.4" />
                    </svg>
                    <span>Signing in...</span>
                }
                else
                {
                    <span>Sign in</span>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                    </svg>
                }
            </button>
        </EditForm>

        @* Footer *@
        <div class="login-footer">
            <div class="status-indicator">
                <span class="status-dot"></span>
                <span>All systems operational</span>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private LoginModel loginModel { get; set; } = new();
    
    private string errorMessage = string.Empty;
    private bool isLoading = false;
    private LoginResult? loginResult = null;
    private bool hasRendered = false;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            hasRendered = true;
        }
        
        if (hasRendered && loginResult != null && loginResult.Success)
        {
            _ = OpenERPAsync();
        }
    }

    private async Task HandleLogin()
    {
        errorMessage = string.Empty;
        isLoading = true;
        loginResult = null;

        try
        {
            var result = await AuthService.LoginAsync(loginModel.Username, loginModel.Password);

            if (result.Success)
            {
                Logger.LogInformation("Login successful, preparing to launch ERP");
                loginResult = result;
                
                await InvokeAsync(StateHasChanged);
                
                if (hasRendered)
                {
                    await OpenERPAsync();
                }
            }
            else
            {
                errorMessage = result.ErrorMessage;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An unexpected error occurred. Please try again.";
            Logger.LogError(ex, "Unexpected error during login");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OpenERPAsync()
    {
        if (loginResult == null || !loginResult.Success) return;

        try
        {
            var launchUrl = $"sysfood://launch?token={Uri.EscapeDataString(loginResult.Token)}&user={Uri.EscapeDataString(loginResult.Username)}";

            Logger.LogInformation("Opening ERP with protocol handler: {Url}", launchUrl);

            await JSRuntime.InvokeVoidAsync("open", launchUrl, "_blank");
            
            await Task.Delay(1000);
            
            NavigationManager.NavigateTo("/launch-success");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error opening protocol handler");
            NavigationManager.NavigateTo($"/launch-error?token={Uri.EscapeDataString(loginResult.Token)}&user={Uri.EscapeDataString(loginResult.Username)}");
        }
        finally
        {
            loginResult = null;
        }
    }
}
